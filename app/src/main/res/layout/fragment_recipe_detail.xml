<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1) Top AppBar with back arrow -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:title="@string/recipe_details_title"
        app:titleTextColor="@android:color/white" />

    <!-- 2) Scrollable content under the toolbar -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 3) Header image -->
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/recipe_image_desc" />

            <!-- 4) Recipe Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- 5) Stats row with Chips -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/difficultyChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:chipIcon="@drawable/baseline_star_24"
                    app:chipIconTint="?attr/colorOnSurface"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:backgroundTint="@color/colorPrimary"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/timeChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:chipIcon="@drawable/baseline_timer_24"
                    app:chipIconTint="?attr/colorOnSurface"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:backgroundTint="@color/colorPrimary"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/caloriesChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    app:chipIcon="@drawable/baseline_local_fire_department_24"
                    app:chipIconTint="?attr/colorOnSurface"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:backgroundTint="@color/colorPrimary"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/servingsChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:chipIcon="@drawable/baseline_dinner_dining_24"
                    app:chipIconTint="?attr/colorOnSurface"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:backgroundTint="@color/colorPrimary"/>
            </LinearLayout>

            <!-- 6) Ingredients Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/ingredientsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ingredients"
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:layout_marginBottom="8dp" />

                    <!-- ▶️ Replaced TextView with RecyclerView for ingredients ▶️ -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/ingredientsRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 7) Directions Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/directions"
                        style="@style/TextAppearance.MaterialComponents.Subtitle1"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/instructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 8) Centered ProgressBar for loading details -->
    <ProgressBar
        android:id="@+id/detailProgressBar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
