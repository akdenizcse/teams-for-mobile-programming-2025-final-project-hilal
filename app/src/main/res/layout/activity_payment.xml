<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ADDRESS SECTION -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_address"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/etStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_street"/>

        <EditText
            android:id="@+id/etNeighborhood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_neighborhood"/>

        <EditText
            android:id="@+id/etApartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_apartment"/>

        <EditText
            android:id="@+id/etFloor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_floor"
            android:layout_marginBottom="70dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_information"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/black"/>

        <!-- CARD DETAILS SECTION -->
        <EditText
            android:id="@+id/cardNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_card_number"
            android:inputType="number"
            android:digits="0123456789"
            android:maxLength="16"/>

        <EditText
            android:id="@+id/expiryEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_expiry"
            android:inputType="datetime"
            android:digits="0123456789/"
            android:maxLength="5"/>

        <EditText
            android:id="@+id/cvvEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_cvv"
            android:inputType="numberPassword"
            android:digits="0123456789"
            android:maxLength="3"/>

        <Button
            android:id="@+id/buttonSubmitPayment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit_payment"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/colorPrimary"/>
    </LinearLayout>
</ScrollView>
